<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/session_navigation"
    app:startDestination="@id/listPrjSessionFragment">

    <fragment
        android:id="@+id/listPrjSessionFragment"
        android:name="com.example.datatrap.session.fragments.list.ListPrjSessionFragment"
        android:label="fragment_list_prj_session"
        tools:layout="@layout/fragment_list_prj_session" >
        <action
            android:id="@+id/action_listPrjSessionFragment_to_addSessionFragment"
            app:destination="@id/addSessionFragment" />
        <action
            android:id="@+id/action_listPrjSessionFragment_to_updateSessionFragment"
            app:destination="@id/updateSessionFragment" />
        <argument
            android:name="projectId"
            app:argType="integer" />
        <argument
            android:name="localityId"
            app:argType="integer" />
        <action
            android:id="@+id/action_listPrjSessionFragment_to_occasionActivity"
            app:destination="@id/occasionActivity" />
    </fragment>
    <fragment
        android:id="@+id/addSessionFragment"
        android:name="com.example.datatrap.session.fragments.AddSessionFragment"
        android:label="fragment_add_session"
        tools:layout="@layout/fragment_add_session" >
        <action
            android:id="@+id/action_addSessionFragment_to_listPrjSessionFragment"
            app:destination="@id/listPrjSessionFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateSessionFragment"
        android:name="com.example.datatrap.session.fragments.UpdateSessionFragment"
        android:label="fragment_update_session"
        tools:layout="@layout/fragment_update_session" >
        <action
            android:id="@+id/action_updateSessionFragment_to_listPrjSessionFragment"
            app:destination="@id/listPrjSessionFragment" />
        <argument
            android:name="session"
            app:argType="com.example.datatrap.models.Session" />
    </fragment>
    <activity
        android:id="@+id/occasionActivity"
        android:name="com.example.datatrap.occasion.OccasionActivity"
        android:label="OccasionActivity" />
</navigation>